{
    "name": "BusinessPartnerValidation",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "license": "ISC",
    "dependencies": {
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap-cloud-sdk/http-client": "^3.2.0",
        "@sap-cloud-sdk/resilience": "^3.3.0",
        "@sap-cloud-sdk/util": "^3.2.0",
        "@sap/xb-msg-amqp-v100": "^0.9.51",
        "@sap/xsenv": "^3.4.0",
        "@sap/xssec": "^3.6.0",
        "express": "^4",
        "grunt": "^1.1.0",
        "passport": "^0.6.0",
        "postcode-validator": "^3.6.6"
    },
    "engines": {
        "node": "18.x"
    },
    "scripts": {
        "start": "npx cds-serve",
        "test": "npm install sqlite3 && npm run test:integration",
        "test:rest-api": "mocha tests/mocha.test.js --timeout 28000",
        "test:integration": "jest tests/integration/BusinessPartnerValidation.test.js"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1.1.0",
        "axios": "^0.21.1",
        "chai": "^4.3.4",
        "chai-http": "^4.3.0",
        "jest": "*",
        "mocha": "^9.2.1",
        "sqlite3": "^5.1.6"
    },
    "cds": {
        "hana": {
            "deploy-format": "hdbtable"
        },
        "requires": {
            "messaging": {
                "kind": "local-messaging",
                "[production]": {
                    "kind": "enterprise-messaging-shared"
                }
            },
            "[production]": {
                "db": {
                    "kind": "hana",
                    "model": [
                        "db",
                        "srv"
                    ]
                }
            },
            "API_BUSINESS_PARTNER": {
                "kind": "odata",
                "model": "srv/external/API_BUSINESS_PARTNER",
                "csrf": true,
                "csrfInBatch": true,
                "[production]": {
                    "credentials": {
                        "destination": "bupa-ecc",
                        "requestTimeout": 18000000
                    }
                }
            },
            "uaa": {
                "kind": "xsuaa"
            }
        }
    }
}
